#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir> <env-dir>

AWS_CLI_URL="https://awscli.amazonaws.com/awscli-exe-linux-x86_64.zip"
BUILD_DIR=$1
INSTALL_DIR="${BUILD_DIR}/.awscli"
TMP_DIR=$(mktemp -d)

echo $BUILD_DIR

mkdir -p $BUILD_DIR/custom-bin
mkdir -p $BUILD_DIR/.profile.d
mkdir -p "${INSTALL_DIR}"

echo "-----> Downloading AWS CLI"
curl --silent --show-error --fail -o "${TMP_DIR}/awscliv2.zip" "${AWS_CLI_URL}"
unzip -qq -d "${TMP_DIR}" "${TMP_DIR}/awscliv2.zip"

echo "-----> Installing AWS CLI"

echo "${TMP_DIR}/aws/install" --install-dir "${INSTALL_DIR}" --bin-dir "${BUILD_DIR}/custom-bin"

"${TMP_DIR}/aws/install" --install-dir "${INSTALL_DIR}" --bin-dir "${BUILD_DIR}/custom-bin"

$BUILD_DIR/custom-bin/aws --version

echo "-----> Exporting PATH"

echo "export PATH=$PATH:$HOME/custom-bin" >> .profile.d/custom_binaries.sh

rm -rf "${TMP_DIR}"

echo "-----> Successfully installed AWS CLI"