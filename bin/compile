#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir> <env-dir>

set -euo pipefail

BUILD_DIR=$1
PATH_DIR="/app"
INSTALL_DIR="$PATH_DIR/.awscli"

cd $BUILD_DIR

mkdir -p $PATH_DIR/.profile.d

unzip -qq aws/.awscli.zip

.awscli/v2/2.14.5/bin/aws --version

echo "-----> Exporting PATH"

echo "export PATH=$PATH:$HOME/.awscli/v2/2.14.5/bin" >> $PATH_DIR/.profile.d/aws_binaries.sh

echo "-----> Successfully installed AWS CLI"
