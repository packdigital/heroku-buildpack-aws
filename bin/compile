#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir> <env-dir>

AWS_CLI_URL="https://awscli.amazonaws.com/awscli-exe-linux-x86_64.zip"
BUILD_DIR=$1
INSTALL_DIR=".awscli"
TMP_DIR=$(mktemp -d)

# Open build dir
cd $BUILD_DIR

#mkdir -p custom-bin
#mkdir -p .profile.d

echo "-----> Downloading AWS CLI"
curl --silent --show-error --fail -o "${TMP_DIR}/awscliv2.zip" "${AWS_CLI_URL}"
unzip -qq -d "${TMP_DIR}" "${TMP_DIR}/awscliv2.zip"

#echo "-----> Installing AWS CLI"
#mkdir "${INSTALL_DIR}"

sudo "${TMP_DIR}/aws/install"
#custom-bin/aws --version

#echo "-----> Exporting PATH"

#echo "export PATH=$PATH:$HOME/custom-bin" >> .profile.d/custom_binaries.sh

#rm -rf "${TMP_DIR}"

echo "-----> Successfully installed AWS CLI"